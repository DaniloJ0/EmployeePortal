            <Button x:Name="BackBtn" Content="" Height="28" Width="33" HorizontalAlignment="Left" Margin="10,10,0,0" Click="BackBtn_Click">
                <Button.Foreground>
                    <ImageBrush/>
                </Button.Foreground>
                <Button.BorderBrush>
                    <ImageBrush/>
                </Button.BorderBrush>
                <Button.Background>
                    <ImageBrush ImageSource="/Views/flecha-izquierda_white.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <Label Content="Registro de usuario" HorizontalAlignment="Left" Height="43" Margin="469,43,0,0" Width="256" Foreground="Teal" FontWeight="Bold" FontSize="25" VerticalAlignment="Top"/>
        <Image Margin="525,106,245,323" Source="/sources/tarjeta-de-identificacion_green.png"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Height="28" Margin="446,241,0,0" VerticalAlignment="Top" Width="119" FontWeight="Bold" Foreground="Teal" FontSize="16" FontFamily="Open Sans"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Height="28" Margin="446,313,0,0" VerticalAlignment="Top" Width="119" FontWeight="Bold" Foreground="Teal" FontSize="16" FontFamily="Open Sans"/>
        <TextBox HorizontalAlignment="Left" Margin="455,274,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="284" Height="34" VerticalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="455,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="284" Height="34" VerticalContentAlignment="Center"/>
        <Button Content="Registrar" HorizontalAlignment="Left" Height="36" Margin="537,404,0,0" VerticalAlignment="Top" Width="120" FontFamily="Open Sans" BorderThickness="2,2,2,2" Foreground="Teal" FontWeight="Bold" BorderBrush="Teal" Background="White" FontSize="16" ClipToBounds="True"/>
    </Grid>
</Window>
